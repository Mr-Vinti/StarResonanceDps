<UserControl x:Class="StarResonanceDpsAnalysis.WPF.Controls.CustomizeProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="ProgressBarBox" TargetType="Border">
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=local:CustomizeProgressBar}}"/>
            <Setter Property="Background" Value="{Binding ProgressBarBackground, RelativeSource={RelativeSource AncestorType=local:CustomizeProgressBar}}"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border x:Name="ProgressBarBox" Style="{StaticResource ProgressBarBox}"/>

        <ContentPresenter Content="{Binding Slot, RelativeSource={RelativeSource AncestorType=local:CustomizeProgressBar}}"
                          ContentTemplate="{Binding SlotDataTemplate, RelativeSource={RelativeSource AncestorType=local:CustomizeProgressBar}}"/>
    </Grid>
</UserControl>
