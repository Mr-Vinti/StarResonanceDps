<UserControl
    x:Class="StarResonanceDpsAnalysis.WPF.Controls.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="HeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="#B2B2B2" />
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius
                        BottomLeft="0"
                        BottomRight="0"
                        TopLeft="{StaticResource MainCornerRadiusDouble}"
                        TopRight="{StaticResource MainCornerRadiusDouble}" />
                </Setter.Value>
            </Setter>

            <EventSetter Event="MouseLeftButtonDown" Handler="Header_MouseLeftButtonDown" />
        </Style>

        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#SAO Welcome TT" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource HeaderBorder}">
        <Grid>
            <TextBlock Style="{StaticResource HeaderTitle}" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:Header}}" />
        </Grid>
    </Border>
</UserControl>
