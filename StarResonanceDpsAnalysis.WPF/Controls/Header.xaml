<UserControl x:Class="StarResonanceDpsAnalysis.WPF.Controls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="HeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="#B2B2B2"/>
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius TopLeft="{StaticResource MainCornerRadiusDouble}"
                                  TopRight="{StaticResource MainCornerRadiusDouble}"
                                  BottomLeft="0" BottomRight="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#SAO Welcome TT"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource HeaderBorder}">
        <Grid>
            <TextBlock Style="{StaticResource HeaderTitle}" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:Header}}"/>
        </Grid>
    </Border>
</UserControl>
