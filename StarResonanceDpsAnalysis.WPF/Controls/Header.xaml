<UserControl x:Class="StarResonanceDpsAnalysis.WPF.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="HeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="#B2B2B2"/>
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius TopLeft="{StaticResource MainCornerRadiusDouble}"
                                  TopRight="{StaticResource MainCornerRadiusDouble}"
                                  BottomLeft="0" BottomRight="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource HeaderBorder}">
        <Grid>
            <TextBlock x:Name="Title" Style="{StaticResource HeaderTitle}" Text="Header"/>
        </Grid>
    </Border>
</UserControl>
