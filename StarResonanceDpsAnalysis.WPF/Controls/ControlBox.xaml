<UserControl x:Class="StarResonanceDpsAnalysis.WPF.Controls.ControlBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <UserControl.Resources>
        <Color x:Key="NMM_HoverColor">#EFEFEF</Color>
        <Color x:Key="Close_HoverColor">#E81123</Color>

        <Style x:Key="ButtonBase" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Width" Value="{x:Static local:ControlBox.DefaultButtonWidth}"/>
        </Style>

        <Style x:Key="MinimizeButton" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="Margin" Value="0,0,100,0"/>
        </Style>

        <Style x:Key="MaximizeButton" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Margin" Value="0,0,50,0"/>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        </Style>

        <Style x:Key="CloseBorder" TargetType="Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius TopLeft="0"
                                  TopRight="{StaticResource MainCornerRadiusDouble}"
                                  BottomLeft="0" BottomRight="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border>
        <Grid>
            <Button x:Name="MinimizeButton" Style="{StaticResource MinimizeButton}" Margin="0,0,100,0"></Button>
            <Button x:Name="MaximizeButton" Style="{StaticResource MaximizeButton}" Margin="0,0,50,0"></Button>
            <Button x:Name="CloseButton" Style="{StaticResource CloseButton}" Margin="0">
                <Border Style="{StaticResource CloseBorder}"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
