<UserControl
    x:Class="StarResonanceDpsAnalysis.WPF.Controls.DpsDetailPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    x:Name="root"
    d:DataContext="{d:DesignInstance Type=viewModels:DpsStatisticsViewModel,
                                     IsDesignTimeCreatable=true}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Padding="10"
        Background="#CC000000"
        CornerRadius="8">
        <StackPanel>
            <!--  顶部标题  -->
            <TextBlock
                Margin="0,0,0,6"
                FontSize="12"
                FontWeight="Regular"
                Foreground="White"
                Style="{StaticResource FooterTextContent}"
                Text="{Binding Title, ElementName=root}" />

            <!--  技能列表  -->
            <ItemsControl ItemsSource="{Binding SkillList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,8,0,0">
                            <!--  技能名  -->
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="Gold"
                                Style="{StaticResource FooterTextContent}"
                                Text="{Binding SkillName}" />
                            <!--  总伤害  -->
                            <TextBlock Style="{StaticResource FooterTextContent}">
                                <Run Foreground="White" Text="总伤害：" />
                                <Run Foreground="White" Text="{Binding TotalDamage}" />
                            </TextBlock>
                            <!--  命中 / 暴击次数 / 平均伤害  -->
                            <TextBlock Style="{StaticResource FooterTextContent}">
                                <Run Foreground="Orange" Text="命中：" />
                                <Run Foreground="White" Text="{Binding HitCount}" />
                                <Run Foreground="Orange" Text="    暴击次数：" />
                                <Run Foreground="White" Text="{Binding CritCount}" />
                                <Run Foreground="Orange" Text="    平均伤害：" />
                                <Run Foreground="White" Text="{Binding AvgDamage}" />
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>