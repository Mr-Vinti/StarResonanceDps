<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 引入 System.Double 类型（用于定义数值资源） -->
    <sys:Double x:Key="MainCornerRadiusDouble" xmlns:sys="clr-namespace:System;assembly=mscorlib">6</sys:Double>

    <!-- 以 CornerRadius 资源形式定义圆角（四个角相同） -->
    <CornerRadius x:Key="MainCornerRadius">6,6,6,6</CornerRadius>

    <!-- Window 风格：透明窗口（没有系统边框/标题栏），背景透明 -->
    <Style x:Key="TransparentWindow" TargetType="Window">
        <!-- 允许透明（Enable per-pixel transparency） -->
        <Setter Property="AllowsTransparency" Value="True"/>
        <!-- 去掉系统窗体样式（无标题栏、无边框） -->
        <Setter Property="WindowStyle" Value="None"/>
        <!-- 窗口背景设为完全透明（常用于自定义 chrome） -->
        <Setter Property="Background" Value="Transparent"/>

        <!-- 新增：强制布局取整和像素对齐 -->
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Border 风格：给窗口内容区留边距并加圆角和投影 -->
    <Style x:Key="ShadowWindowBorder" TargetType="Border">
        <!-- 给外部留出空间以显示投影（shadow） -->
        <Setter Property="Margin" Value="3"/>
        <!-- 使用上面定义的圆角资源 -->
        <Setter Property="CornerRadius" Value="{DynamicResource MainCornerRadius}"/>
        <!-- 使用 DropShadowEffect 作为简单投影效果 -->
        <Setter Property="Effect">
            <Setter.Value>
                <!-- BlurRadius: 模糊半径；Opacity: 透明度；ShadowDepth: 阴影偏移（0 = 居中扩散） -->
                <DropShadowEffect BlurRadius="3" Opacity="0.5" ShadowDepth="0" Color="#000" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
