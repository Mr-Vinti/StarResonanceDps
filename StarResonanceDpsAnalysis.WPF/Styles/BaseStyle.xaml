<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="MainCornerRadiusDouble" xmlns:sys="clr-namespace:System;assembly=mscorlib">6</sys:Double>
    <CornerRadius x:Key="MainCornerRadius">6,6,6,6</CornerRadius>

    <Style x:Key="TransparentWindow" TargetType="Window">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style x:Key="ShadowWindowBorder" TargetType="Border">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="CornerRadius" Value="{DynamicResource MainCornerRadius}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#000" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>