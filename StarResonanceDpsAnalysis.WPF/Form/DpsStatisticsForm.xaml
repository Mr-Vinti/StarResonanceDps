<Window x:Class="StarResonanceDpsAnalysis.WPF.Form.DpsStatisticsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Form" xmlns:svgc="https://github.com/dotnetprojects/SVGImage"
        mc:Ignorable="d" AllowsTransparency="True"
        Title="DpsStatisticsForm" Height="405" Width="319" WindowStyle="None"  Background="Transparent" Foreground="{x:Null}">
    <Border CornerRadius="3" Background="#661F1F1F">
        <Grid>
            <Border Background="#CCBABABA" 
                    Height="28" VerticalAlignment="Top"
                    CornerRadius="3,3,0,0">
                <TextBlock
                           Margin="19,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontFamily="HarmonyOS Sans SC" HorizontalAlignment="Left" Width="50" Text="当前伤害"/>

            </Border>
            <Button x:Name="RightButton" Style="{StaticResource IconButtonStyle}"  Content="" HorizontalAlignment="Left" Height="16" Margin="68,6,0,0"
                    VerticalAlignment="Top" Width="18" Click="RightButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="iconfont" FontSize="15"/>
            <Button x:Name="LeftButton" Style="{StaticResource IconButtonStyle}"  Content="" HorizontalAlignment="Left" Height="16" Margin="1,6,0,0"
                VerticalAlignment="Top" Width="18" Click="LeftButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="iconfont" FontSize="15"/>
            <Button x:Name="SetButton" Style="{StaticResource IconButtonStyle}" Content="&#xE600;" HorizontalAlignment="Left" Height="16" Margin="269,6,0,0"
                VerticalAlignment="Top" Width="18" Click="SetButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="iconfont" FontSize="15">
            </Button>
            <Button x:Name="SwitchButton" Style="{StaticResource IconButtonStyle}"  Content="" HorizontalAlignment="Left" Height="16"
            VerticalAlignment="Top" Width="18" Click="SwitchButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="iconfont" FontSize="12" Margin="91,6,0,0"/>
            <Button x:Name="RefreshButton" Style="{StaticResource IconButtonStyle}" Content="" HorizontalAlignment="Left" Height="16" Margin="246,6,0,0"
                VerticalAlignment="Top" Width="18" Click="RefreshButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="iconfont" FontSize="15"/>
            <Button x:Name="PullButton" Style="{StaticResource IconButtonStyle}" Content="" HorizontalAlignment="Left" Height="16" Margin="295,6,0,0"
                VerticalAlignment="Top" Width="18" Click="RefreshButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="iconfont" FontSize="15"/>


        </Grid>
    </Border>

</Window>
