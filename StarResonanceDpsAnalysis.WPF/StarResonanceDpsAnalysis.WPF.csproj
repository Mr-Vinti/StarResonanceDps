<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <Version>3.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Fonts\AlimamaShuHeiTi-Bold.ttf" />
    <None Remove="Assets\Fonts\HarmonyOS_Sans_SC_Bold.ttf" />
    <None Remove="Assets\Fonts\HarmonyOS_Sans_SC_Regular.ttf" />
    <None Remove="Assets\Fonts\iconfont.ttf" />
    <None Remove="Assets\Fonts\SAOWelcomeTT-Regular.ttf" />
    <None Remove="Assets\Images\Crown.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\StarResonanceDpsAnalysis.Assets\StarResonanceDpsAnalysis.Assets.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Fonts\AlimamaShuHeiTi-Bold.ttf" />
    <Resource Include="Assets\Fonts\HarmonyOS_Sans_SC_Bold.ttf" />
    <Resource Include="Assets\Fonts\HarmonyOS_Sans_SC_Regular.ttf" />
    <Resource Include="Assets\Fonts\iconfont.ttf" />
    <Resource Include="Assets\Fonts\SAOWelcomeTT-Regular.ttf" />
    <Resource Include="Assets\Images\Crown.png" />
  </ItemGroup>

  <ItemGroup>
    <!-- 把任意 *.function.cs 折叠到去掉 .function 后的同名 .xaml 下 -->
    <Compile Update="**/*.xaml.function.cs">
      <!-- %(Filename) 不带扩展名 -->
      <DependentUpon>$([System.String]::Copy('%(Filename)').Replace('.function',''))</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\DpsStatisticsView.xaml.function.cs">
      <DependentUpon>DpsStatisticsView.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
