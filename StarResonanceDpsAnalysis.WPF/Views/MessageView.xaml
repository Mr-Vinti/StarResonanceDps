<Window 
    x:Class="StarResonanceDpsAnalysis.WPF.Views.MessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    mc:Ignorable="d"
    Title="Message" 
    Width="400"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    Style="{StaticResource TransparentWindow}">

    <Window.Resources>

        <Style x:Key="ContentBorder" TargetType="Border">
            <Setter Property="MinHeight" Value="120" />
            <Setter Property="Padding" Value="15,12,15,12" />
        </Style>

        <Style x:Key="ContentText" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="TextTrimming" Value="None" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        
    </Window.Resources>

    <Border Background="#ECEBE9" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <ctrl:Header 
                x:Name="HeaderControl"
                Title="{Binding Title}"
                Grid.Row="0" />
            
            <!-- Auto-sized content area. Height grows with text. -->
            <Border 
                Style="{StaticResource ContentBorder}"
                Grid.Row="1">
                <TextBlock 
                    x:Name="ContentTextBlock"
                    Style="{StaticResource ContentText}"
                    Text="{Binding Content}"
                    />
            </Border>
            
            <ctrl:Footer
                Height="50"
                Background="#FFF"
                ConfirmClick="Footer_ConfirmClick"
                CancelClick="Footer_CancelClick"
                Grid.Row="2" />

        </Grid>
    </Border>
</Window>
