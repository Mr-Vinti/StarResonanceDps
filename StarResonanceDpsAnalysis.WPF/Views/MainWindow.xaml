<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="别查我DPS"
    Width="675"
    Height="520"
    MinWidth="675"
    MinHeight="360"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="TitleGrid" TargetType="Grid" />

        <Style
            x:Key="TitleText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>

        <Style x:Key="PluginWarpPanelScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Padding" Value="5,0,5,0" />
        </Style>

        <Style x:Key="PluginWrapPanel" TargetType="WrapPanel" />

        <Style x:Key="PluginGroupBox" TargetType="Border">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="265" />
            <Setter Property="BorderBrush" Value="{StaticResource AntBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,0,10,10" />
            <Setter Property="Margin" Value="5,12,5,5" />
            <Setter Property="CornerRadius" Value="3" />
        </Style>

        <Style
            x:Key="PluginTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="#EEE" />
            <Setter Property="Padding" Value="6,3,6,3" />
            <Setter Property="Margin" Value="10,-12,0,0" />
        </Style>

        <Style
            x:Key="PluginIntro"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>

        <Style x:Key="PluginAutoRunCheckBox" TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style x:Key="PluginRunButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Width" Value="58" />
            <Setter Property="Height" Value="24" />
        </Style>
    </Window.Resources>

    <!-- <b:Interaction.Triggers> -->
    <!--     <b:EventTrigger EventName="Loaded"> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallSettingsViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallDpsStatisticsViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallSkillBreakdownViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallAboutViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallDamageReferenceViewCommand}" /> -->
    <!--     </b:EventTrigger> -->
    <!-- </b:Interaction.Triggers> -->

    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <ctrl:Header Title="别查我 D P S" Grid.Row="0" />

            <Grid Grid.Row="1" Style="{StaticResource TitleGrid}">
                <TextBlock Style="{StaticResource TitleText}" Text="插件列表" />
            </Grid>

            <ScrollViewer Grid.Row="2" Style="{StaticResource PluginWarpPanelScrollViewer}">
                <WrapPanel Style="{StaticResource PluginWrapPanel}">

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="DPS工具" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="简介：" />
                                <LineBreak />
                                <Run Text="提供DPS统计、技能分解等功能" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="作者：" />
                                <LineBreak />
                                <Run Text="[官方] 别查我DPS 开发团队" />
                            </TextBlock>

                            <CheckBox Content="自启动" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button Style="{StaticResource PluginRunButton}"
                                    Content="开启"
                                    Command="{Binding CallDpsStatisticsViewCommand}"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="模组求解器" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="简介：" />
                                <LineBreak />
                                <Run Text="提供模组快速计算最优解功能" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="作者：" />
                                <LineBreak />
                                <Run Text="[官方] 别查我DPS 开发团队" />
                            </TextBlock>

                            <CheckBox Content="自启动" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button Style="{StaticResource PluginRunButton}"
                                    Content="开启"
                                    Command="{Binding CallModuleSolveViewCommandCommand}"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="野外BOSS状态查看器" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="简介：" />
                                <LineBreak />
                                <Run Text="通过大量的玩家在线数据互助，提供各线路的野外BOSS存活状态等信息" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="作者：" />
                                <LineBreak />
                                <Run Text="[官方] 别查我DPS 开发团队" />
                            </TextBlock>

                            <CheckBox Content="自启动" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button
                                Click="UnderConstructionButton_Click"
                                Content="开启"
                                Style="{StaticResource PluginRunButton}" />
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="小猪娜宝状态查看器" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="简介：" />
                                <LineBreak />
                                <Run Text="通过大量的玩家在线数据互助，提供小猪娜宝的线路与位置信息" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="作者：" />
                                <LineBreak />
                                <Run Text="[官方] 别查我DPS 开发团队" />
                            </TextBlock>

                            <CheckBox Content="自启动" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button
                                Click="UnderConstructionButton_Click"
                                Content="开启"
                                Style="{StaticResource PluginRunButton}" />
                        </Grid>
                    </Border>
                    <GroupBox Header="Debug functions" Visibility="{Binding Debug.Enabled, Converter={StaticResource BoolToVisibilityConverter}}">
                        <GroupBox.Style>
                            <Style TargetType="GroupBox">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Top" />
                                <Setter Property="Width" Value="200" />
                                <Setter Property="Height" Value="265" />
                                <Setter Property="Padding" Value="10,0,10,10" />
                                <Setter Property="Margin" Value="5,0,5,5" />
                            </Style>
                        </GroupBox.Style>
                        <StackPanel>
                            <StackPanel>
                                <ComboBox
                                    ItemsSource="{Binding AvailableThemes}"
                                    SelectedIndex="0"
                                    SelectedItem="{Binding Theme}" />
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource TestTextBlockStyle}">
                                    Theme Switch Test Text
                                </TextBlock>
                                <Button Command="{Binding Debug.CallDebugWindowCommand}">
                                    Pcap Test
                                </Button>
                                <Button Command="{Binding CallSkillBreakdownViewCommand}">
                                    Skill Breakdown View
                                </Button>
                                <Button Command="{Binding CallDamageReferenceViewCommand}">
                                    Damage Reference View
                                </Button>
                                <Button Command="{Binding CallSettingsViewCommand}">
                                    Settings View
                                </Button>
                                <Button Command="{Binding CallAboutViewCommand}">
                                    About View
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
