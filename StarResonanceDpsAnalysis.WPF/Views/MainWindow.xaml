<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:hlp="clr-namespace:StarResonanceDpsAnalysis.WPF.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:loc="clr-namespace:StarResonanceDpsAnalysis.WPF.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="{lex:Loc Key={x:Static loc:ResourcesKeys.App_Name}}"
    Width="1000"
    Height="650"
    MinWidth="830"
    MinHeight="520"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    lex:LocalizeDictionary.DesignCulture="en-US"
    lex:ResxLocalizationProvider.DefaultAssembly="StarResonanceDpsAnalysis.WPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>

        <Style x:Key="IconFont" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#IconFont" />
        </Style>

        <Style x:Key="MainContentBorder" TargetType="Border">
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style x:Key="PluginListBorder" TargetType="Border">
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <Style x:Key="PluginDetailBorder" TargetType="Border">
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <Style x:Key="DetailTabControl" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <ContentPresenter ContentSource="SelectedContent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#9E9E9E" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style x:Key="SeachIcon" TargetType="TextBlock" BasedOn="{StaticResource IconFont}">
            <Setter Property="Margin" Value="16,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Foreground" Value="#C4C4C4" />
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="50,0,5,0" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style x:Key="PluginListTitleBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#EEE" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style x:Key="PluginListTitle" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="Foreground" Value="#9E9E9E" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="20,10,10,10" />
        </Style>

        <Style x:Key="PluginBorder" TargetType="Border">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Padding" Value="20,15,0,15" />
            <Setter Property="BorderBrush" Value="#EEE" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style x:Key="PluginListName" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="Foreground" Value="#6C8CD8" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="PluginListIntro" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,25,0,0" />
        </Style>

        <Style x:Key="PluginListTip" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#AAA" />
        </Style>

        <Style x:Key="PluginStateBorderBase" TargetType="Border">
            <Setter Property="Background" Value="#D9E1F9" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="13,3,13,3" />
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>

        <Style x:Key="PluginAutoStartBorder" TargetType="Border" BasedOn="{StaticResource PluginStateBorderBase}">
            <Setter Property="Margin" Value="10,0,10,10" />
        </Style>

        <Style x:Key="PluginEnableBorder" TargetType="Border" BasedOn="{StaticResource PluginStateBorderBase}">
            
        </Style>

        <Style x:Key="PluginStateText" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="9" />
            <Setter Property="Foreground" Value="#6C8CD8" />
        </Style>

        <Style x:Key="PluginDetailTitleBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#9E9E9E" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Padding" Value="20,10,20,10" />
        </Style>

        <Style x:Key="PluginDetailName" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="Foreground" Value="#6C8CD8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style x:Key="AutoRunGrid" TargetType="Grid">
            <Setter Property="Margin" Value="0,38,0,0" />
        </Style>

        <Style x:Key="AutoRunText" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style x:Key="PluginButtonBase" TargetType="Border">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="36" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <Style x:Key="PluginTextBase" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="PluginSettingButton" TargetType="Border" BasedOn="{StaticResource PluginButtonBase}">
            <Setter Property="BorderBrush" Value="#EEE" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style x:Key="PluginSettingText" TargetType="TextBlock" BasedOn="{StaticResource PluginTextBase}">
            <Setter Property="Foreground" Value="#777" />
        </Style>

        <Style x:Key="PluginRunButton" TargetType="Border" BasedOn="{StaticResource PluginButtonBase}">
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#D9E1F9" />
        </Style>

        <Style x:Key="PluginRunText" TargetType="TextBlock" BasedOn="{StaticResource PluginTextBase}">
            <Setter Property="Foreground" Value="#6C8CD8" />
        </Style>

        <Style x:Key="PluginDetailIntroBorder" TargetType="Border">
            <Setter Property="Padding" Value="20,10,20,10" />
        </Style>

    </Window.Resources>

    <Border Background="#ECEBE9" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:Header Title="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Header_Title}}" 
                         Grid.Row="0" />

            <Border Style="{StaticResource MainContentBorder}"
                    Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" MinWidth="200" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border x:Name="PluginListHost"
                            Style="{StaticResource PluginListBorder}"
                            Grid.Column="0">
                        <Border.OpacityMask>
                            <VisualBrush Stretch="Fill" AlignmentX="Left" AlignmentY="Top">
                                <VisualBrush.Visual>
                                    <Border Background="Black"
                                            CornerRadius="{Binding CornerRadius, ElementName=PluginListHost}"
                                            Width="{Binding ActualWidth, ElementName=PluginListHost}"
                                            Height="{Binding ActualHeight, ElementName=PluginListHost}" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Border.OpacityMask>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Style="{StaticResource SearchBorder}"
                                    Grid.Row="0">
                                <Grid>

                                    <TextBlock Style="{StaticResource SeachIcon}" Text="&#xe602;"/>

                                    <TextBox
                                        x:Name="SearchBox"
                                        Style="{StaticResource SearchBox}"
                                        hlp:TextBoxHelper.Placeholder="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Search_PlaceHolder}}"/>

                                </Grid>
                            </Border>

                            <Border Style="{StaticResource PluginListTitleBorder}"
                                    Grid.Row="1">
                                <TextBlock Style="{StaticResource PluginListTitle}"
                                           Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_PluginList_Title}}"/>
                            </Border>

                            <ScrollViewer 
                                VerticalScrollBarVisibility="Auto" 
                                Grid.Row="2">
                                <StackPanel x:Name="TabControlIndexChanger">

                                    <ToggleButton 
                                        Click="TabSelector_Click"
                                        Tag="0">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border 
                                                    x:Name="bb"
                                                    Style="{StaticResource PluginBorder}">

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Grid Grid.Column="0">
                                                            <TextBlock 
                                                                Style="{StaticResource PluginListName}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_DpsTool_Title}}"/>

                                                            <TextBlock 
                                                                Style="{StaticResource PluginListIntro}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_DpsTool_Description}}"/>
                                                        </Grid>

                                                        <Grid Grid.Column="1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <Border 
                                                                Style="{StaticResource PluginAutoStartBorder}"
                                                                Grid.Row="0">

                                                                <TextBlock 
                                                                    Style="{StaticResource PluginStateText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoRunState_Disabled}}"/>
                                                            </Border>

                                                            <Border 
                                                                Style="{StaticResource PluginEnableBorder}"
                                                                Grid.Row="1">

                                                                <TextBlock 
                                                                    Style="{StaticResource PluginStateText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_State_Inactive}}"/>
                                                            </Border>
                                                        </Grid>

                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="bb" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#E8F1F6" Offset="0" />
                                                                    <GradientStop Color="#FFF" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bb" Property="Background" Value="#F8F8F8" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <ToggleButton 
                                        Click="TabSelector_Click"
                                        Tag="1">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">

                                                <Border 
                                                    x:Name="bb"
                                                    Style="{StaticResource PluginBorder}">

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Grid Grid.Column="0">
                                                            <TextBlock 
                                                                Style="{StaticResource PluginListName}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_ModuleSolver_Title}}"/>

                                                            <TextBlock 
                                                                Style="{StaticResource PluginListIntro}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_ModuleSolver_Description}}"/>
                                                        </Grid>

                                                        <Grid Grid.Column="1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <Border 
                                                                Style="{StaticResource PluginAutoStartBorder}"
                                                                Grid.Row="0">

                                                                <TextBlock 
                                                                    Style="{StaticResource PluginStateText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoRunState_Disabled}}"/>
                                                            </Border>

                                                            <Border 
                                                                Style="{StaticResource PluginEnableBorder}"
                                                                Grid.Row="1">

                                                                <TextBlock 
                                                                    Style="{StaticResource PluginStateText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_State_Inactive}}"/>
                                                            </Border>
                                                        </Grid>

                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="bb" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#E8F1F6" Offset="0" />
                                                                    <GradientStop Color="#FFF" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bb" Property="Background" Value="#F8F8F8" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <ToggleButton 
                                        Click="TabSelector_Click"
                                        Tag="2">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">

                                                <Border 
                                                    x:Name="bb"
                                                    Style="{StaticResource PluginBorder}">

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Grid Grid.Column="0">
                                                            <TextBlock 
                                                                Style="{StaticResource PluginListName}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_WorldBoss_Title}}"/>

                                                            <TextBlock 
                                                                Style="{StaticResource PluginListIntro}"
                                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_WorldBoss_Description}}"/>
                                                        </Grid>

                                                        <Grid Grid.Column="1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <Border 
                                                                Style="{StaticResource PluginAutoStartBorder}"
                                                                Grid.Row="0">

                                                                <TextBlock 
                                                                    Style="{StaticResource PluginStateText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoRunState_Disabled}}"/>
                                                            </Border>

                                                            <Border 
                                                                Style="{StaticResource PluginEnableBorder}"
                                                                Grid.Row="1">

                                                                <TextBlock 
                                                                    Style="{StaticResource PluginStateText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_State_Inactive}}"/>
                                                            </Border>
                                                        </Grid>

                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="bb" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#E8F1F6" Offset="0" />
                                                                    <GradientStop Color="#FFF" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bb" Property="Background" Value="#F8F8F8" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <ToggleButton 
                                        Click="TabSelector_Click"
                                        Tag="3"
                                        Visibility="{Binding IsDebugContentVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">

                                                <Border 
                                                    x:Name="bb" 
                                                    Style="{StaticResource PluginBorder}">

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="10"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Grid Grid.Column="0">
                                                            <TextBlock 
                                                                Style="{StaticResource PluginListName}"
                                                                Text="Debug Tab"/>

                                                            <TextBlock 
                                                                Style="{StaticResource PluginListIntro}"
                                                                Text="Humm... It's just for debug..."/>
                                                        </Grid>

                                                        <Border 
                                                            Style="{StaticResource PluginEnableBorder}"
                                                            Grid.Column="2">

                                                            <TextBlock 
                                                                Style="{StaticResource PluginStateText}"
                                                                Text="Debug"
                                                                ToolTip="Easter Egg!"/>
                                                        </Border>

                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="bb" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#E8F1F6" Offset="0" />
                                                                    <GradientStop Color="#FFF" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bb" Property="Background" Value="#F8F8F8" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <Border Style="{StaticResource PluginBorder}">
                                        <TextBlock 
                                            Style="{StaticResource PluginListTip}"
                                            Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_ThirdPartySdkTips}}"/>
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>

                        </Grid>
                    </Border>

                    <GridSplitter Grid.Column="1"/>

                    <Border Style="{StaticResource PluginDetailBorder}"
                            Grid.Column="2">
                        <TabControl
                            x:Name="MainTabControl"
                            Style="{StaticResource DetailTabControl}"
                            SelectedIndex="0">

                            <TabItem
                                Visibility="{Binding IsDebugContentVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border 
                                        Style="{StaticResource PluginDetailTitleBorder}"
                                        Grid.Row="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">

                                                <TextBlock 
                                                    Style="{StaticResource PluginDetailName}"
                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_DpsTool_Title}}"/>

                                                <Grid Style="{StaticResource AutoRunGrid}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ctrl:SwitchControl
                                                        OffContent="{lex:Loc Key={x:Static loc:ResourcesKeys.Settings_Switch_Off}}"
                                                        OnContent="{lex:Loc Key={x:Static loc:ResourcesKeys.Settings_Switch_On}}"
                                                        IsChecked="False"
                                                        Grid.Column="0"/>

                                                    <TextBlock 
                                                        Style="{StaticResource AutoRunText}"
                                                        Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoStart}}"
                                                        Grid.Column="1"/>
                                                </Grid>

                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button
                                                    Command="{Binding CallSettingsViewCommand}"
                                                    Grid.Column="0">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Border 
                                                                x:Name="bb"
                                                                Style="{StaticResource PluginSettingButton}">
                                                                <TextBlock 
                                                                    Style="{StaticResource PluginSettingText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Settings}}"/>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="bb" Property="Background" Value="#F8F8F8" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                                <Button
                                                    Command="{Binding CallDpsStatisticsViewCommand}"
                                                    Grid.Column="1">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Border 
                                                                x:Name="bb"
                                                                Style="{StaticResource PluginRunButton}">
                                                                <TextBlock 
                                                                    Style="{StaticResource PluginRunText}"
                                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.Common_Action_Open}}"/>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="bb" Property="Background" Value="#C8D0E8" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <Border 
                                        Style="{StaticResource PluginDetailIntroBorder}"
                                        Grid.Row="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Author}}"
                                                Grid.Row="0"
                                                Grid.Column="0"/>
                                            <TextBlock 
                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Author_OfficialTeam}}"
                                                TextWrapping="Wrap"
                                                Grid.Row="0"
                                                Grid.Column="2"/>

                                            <TextBlock 
                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Intro}}"
                                                Grid.Row="1"
                                                Grid.Column="0"/>
                                            <TextBlock 
                                                Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_DpsTool_Description}}"
                                                TextWrapping="Wrap"
                                                Grid.Row="1"
                                                Grid.Column="2"/>
                                        </Grid>
                                    </Border>

                                </Grid>
                            </TabItem>

                            <TabItem>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border 
                                        Style="{StaticResource PluginDetailTitleBorder}"
                                        Grid.Row="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">

                                                <TextBlock 
                                                    Style="{StaticResource PluginDetailName}"
                                                    Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_ModuleSolver_Title}}"/>

                                                <Grid Style="{StaticResource AutoRunGrid}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ctrl:SwitchControl
