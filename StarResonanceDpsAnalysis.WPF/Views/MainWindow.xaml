<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:loc="clr-namespace:StarResonanceDpsAnalysis.WPF.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="{lex:Loc Key={x:Static loc:ResourcesKeys.App_Name}}"
    Width="675"
    Height="520"
    MinWidth="675"
    MinHeight="360"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    lex:LocalizeDictionary.DesignCulture="en-US"
    lex:ResxLocalizationProvider.DefaultAssembly="StarResonanceDpsAnalysis.WPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="TitleGrid" TargetType="Grid" />

        <Style
            x:Key="TitleText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>

        <Style x:Key="PluginWarpPanelScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Padding" Value="5,0,5,0" />
        </Style>

        <Style x:Key="PluginWrapPanel" TargetType="WrapPanel" />

        <Style x:Key="PluginGroupBox" TargetType="Border">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="265" />
            <Setter Property="BorderBrush" Value="{StaticResource AntBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,0,10,10" />
            <Setter Property="Margin" Value="5,12,5,5" />
            <Setter Property="CornerRadius" Value="3" />
        </Style>

        <Style
            x:Key="PluginTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="#EEE" />
            <Setter Property="Padding" Value="6,3,6,3" />
            <Setter Property="Margin" Value="10,-12,0,0" />
        </Style>

        <Style
            x:Key="PluginIntro"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>

        <Style x:Key="PluginAutoRunCheckBox" TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style x:Key="PluginRunButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Width" Value="58" />
            <Setter Property="Height" Value="24" />
        </Style>
    </Window.Resources>

    <!-- <b:Interaction.Triggers> -->
    <!--     <b:EventTrigger EventName="Loaded"> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallSettingsViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallDpsStatisticsViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallSkillBreakdownViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallAboutViewCommand}" /> -->
    <!--         <b:InvokeCommandAction Command="{Binding CallDamageReferenceViewCommand}" /> -->
    <!--     </b:EventTrigger> -->
    <!-- </b:Interaction.Triggers> -->

    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:Header Title="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Header_Title}}" Grid.Row="0" />

            <Grid Grid.Row="1" Style="{StaticResource TitleGrid}">
                <TextBlock Style="{StaticResource TitleText}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_PluginList_Title}}" />
            </Grid>

            <ScrollViewer Grid.Row="2" Style="{StaticResource PluginWarpPanelScrollViewer}">
                <WrapPanel Style="{StaticResource PluginWrapPanel}">

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_DpsTool_Title}}" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Intro}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_DpsTool_Description}}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Author}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Author_OfficialTeam}}" />
                            </TextBlock>

                            <CheckBox Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoStart}}" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button
                                Command="{Binding CallDpsStatisticsViewCommand}"
                                Content="{lex:Loc Key={x:Static loc:ResourcesKeys.Common_Action_Open}}"
                                Style="{StaticResource PluginRunButton}" />
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_ModuleSolver_Title}}" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Intro}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_ModuleSolver_Description}}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Author}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Author_OfficialTeam}}" />
                            </TextBlock>

                            <CheckBox Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoStart}}" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button
                                Command="{Binding CallModuleSolveViewCommandCommand}"
                                Content="{lex:Loc Key={x:Static loc:ResourcesKeys.Common_Action_Open}}"
                                Style="{StaticResource PluginRunButton}" />
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_WorldBoss_Title}}" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Intro}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_WorldBoss_Description}}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Author}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Author_OfficialTeam}}" />
                            </TextBlock>

                            <CheckBox Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoStart}}" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button
                                Click="UnderConstructionButton_Click"
                                Content="{lex:Loc Key={x:Static loc:ResourcesKeys.Common_Action_Open}}"
                                Style="{StaticResource PluginRunButton}" />
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource PluginGroupBox}">
                        <Grid>
                            <TextBlock Style="{StaticResource PluginTitle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_PigTracker_Title}}" />

                            <TextBlock Style="{StaticResource PluginIntro}">
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Intro}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_PigTracker_Description}}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Label_Author}}" />
                                <LineBreak />
                                <Run Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_Author_OfficialTeam}}" />
                            </TextBlock>

                            <CheckBox Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Plugin_AutoStart}}" Style="{StaticResource PluginAutoRunCheckBox}" />

                            <Button
                                Click="UnderConstructionButton_Click"
                                Content="{lex:Loc Key={x:Static loc:ResourcesKeys.Common_Action_Open}}"
                                Style="{StaticResource PluginRunButton}" />
                        </Grid>
                    </Border>
                    <GroupBox Header="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_Group_Title}}" Visibility="{Binding Debug.Enabled, Converter={StaticResource BoolToVisibilityConverter}}">
                        <GroupBox.Style>
                            <Style TargetType="GroupBox">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Top" />
                                <Setter Property="Width" Value="200" />
                                <Setter Property="Height" Value="265" />
                                <Setter Property="Padding" Value="10,0,10,10" />
                                <Setter Property="Margin" Value="5,0,5,5" />
                            </Style>
                        </GroupBox.Style>
                        <StackPanel>
                            <StackPanel>
                                <ComboBox
                                    ItemsSource="{Binding AvailableThemes}"
                                    SelectedIndex="0"
                                    SelectedItem="{Binding Theme}" />
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource TestTextBlockStyle}" Text="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_ThemeTest}}" />
                                <Button Command="{Binding Debug.CallDebugWindowCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_Button_PcapTest}}" />
                                <Button Command="{Binding CallSkillBreakdownViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_Button_SkillBreakdown}}" />
                                <Button Command="{Binding CallDamageReferenceViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_Button_DamageReference}}" />
                                <Button Command="{Binding CallSettingsViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_Button_Settings}}" />
                                <Button Command="{Binding CallAboutViewCommand}" Content="{lex:Loc Key={x:Static loc:ResourcesKeys.MainWindow_Debug_Button_About}}" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>
            </ScrollViewer>
            
            <ctrl:Footer
                Grid.Row="3"
                Height="50"
                CancelCommand="{Binding ShutdownCommand}" />
            
        </Grid>
    </Border>
</Window>
