<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.DpsStatisticsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:StarResonanceDpsAnalysis.WPF.Converter"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="https://github.com/dotnetprojects/SVGImage"
    xmlns:wc="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    Title="DpsStatisticsForm"
    Width="320"
    Height="359"
    MinWidth="300"
    MinHeight="31"
    ResizeMode="CanResize"
    Style="{StaticResource TransparentWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="TitleBar" TargetType="Border">
            <Setter Property="Background" Value="#CCBABABA" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Panel.ZIndex" Value="1" />
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius
                        BottomLeft="0"
                        BottomRight="0"
                        TopLeft="{StaticResource MainCornerRadiusDouble}"
                        TopRight="{StaticResource MainCornerRadiusDouble}" />
                </Setter.Value>
            </Setter>

            <EventSetter Event="MouseLeftButtonDown" Handler="TitleBar_MouseLeftButtonDown" />
        </Style>

        <Style x:Key="StatisticTypeText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC" />
            <Setter Property="Width" Value="51" />
            <Setter Property="Margin" Value="19,0,0,0" />
            <Setter Property="Text" Value="当前伤害" />
        </Style>

        <Style
            x:Key="StatisticLRButton"
            BasedOn="{StaticResource IconButtonStyle}"
            TargetType="Button">
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#iconfont" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <Style
            x:Key="StatisticSwitchButton"
            BasedOn="{StaticResource IconButtonStyle}"
            TargetType="Button">
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#iconfont" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style
            x:Key="StatisticFuncButton"
            BasedOn="{StaticResource IconButtonStyle}"
            TargetType="Button">
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#iconfont" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <Style x:Key="SPBList" TargetType="ctrl:SortedProgressBarList">
            <Setter Property="Margin" Value="0,25,0,25" />
            <Setter Property="ProgressBarMargin" Value="4,4,4,0" />
        </Style>

        <converter:LessThanToBoolConverter x:Key="LessThanToBoolConverter" />
        <Style x:Key="FooterContentBorder" TargetType="Border">
            <Setter Property="Background" Value="#CCBABABA" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="CornerRadius">
                <Setter.Value>
                    <CornerRadius
                        BottomLeft="{StaticResource MainCornerRadiusDouble}"
                        BottomRight="{StaticResource MainCornerRadiusDouble}"
                        TopLeft="0"
                        TopRight="0" />
                </Setter.Value>
            </Setter>

            <EventSetter Event="MouseLeftButtonDown" Handler="TitleBar_MouseLeftButtonDown" />

            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <Binding
                            Converter="{StaticResource LessThanToBoolConverter}"
                            ConverterParameter="56"
                            Path="ActualHeight"
                            RelativeSource="{RelativeSource AncestorType=local:DpsStatisticsView}" />
                    </DataTrigger.Binding>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Opacity"
                                    To="0"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Opacity"
                                    To="1"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FooterTextContent" TargetType="TextBlock">
            <Setter Property="Height" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC" />
            <Setter Property="Foreground" Value="#FFF" />
        </Style>
    </Window.Resources>

    <!--  WindowChrome: 开启可拉伸边界  -->
    <wc:WindowChrome.WindowChrome>
        <wc:WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </wc:WindowChrome.WindowChrome>

    <!--  半透明/圆角交给内部 Border  -->
    <Border Background="#99191919" Style="{StaticResource ShadowWindowBorder}">
        <Grid>

            <Border Style="{StaticResource TitleBar}">
                <!--  顶部栏,Grid 一般不设置属性  -->
                <Grid>

                    <!--  统计类型标注  -->
                    <TextBlock
                        x:Name="StatisticTypeLabel"
                        Grid.ColumnSpan="2"
                        Margin="19,0,0,0"
                        Style="{StaticResource StatisticTypeText}" />
                    <!--  左侧按钮  -->
                    <Button
                        x:Name="LeftButton"
                        Margin="2,0,0,0"
                        VerticalAlignment="Center"
                        Click="LeftButton_Click"
                        Content=""
                        Style="{StaticResource StatisticLRButton}" />
                    <!--  右侧按钮  -->
                    <Button
                        x:Name="RightButton"
                        Margin="70,0,0,0"
                        VerticalAlignment="Center"
                        Click="RightButton_Click"
                        Content=""
                        Style="{StaticResource StatisticLRButton}" />
                    <!--  切换按钮  -->
                    <Button
                        x:Name="SwitchButton"
                        Margin="90,0,0,0"
                        Click="SwitchButton_Click"
                        Content=""
                        Style="{StaticResource StatisticSwitchButton}"
                        ToolTip="切换为：全程 / 当前"
                        ToolTipService.InitialShowDelay="200"
                        ToolTipService.Placement="Mouse"
                        ToolTipService.ShowDuration="3000" />

                    <!--  刷新按钮  -->
                    <Grid>
                        <!--  你的按钮（触发器）  -->
                        <Button
                            x:Name="RefreshButton"
                            Width="18"
                            Margin="0,5,50,5"
                            Click="RefreshButton_Click"
                            Content=""
                            MouseEnter="RefreshButton_MouseEnter"
                            MouseLeave="RefreshButton_MouseLeave"
                            Style="{StaticResource StatisticFuncButton}" />
                        <!--  Popup 承载自定义 UserControl  -->
                        <!--  鼠标经过 显示测试到时放进度条上  -->
                        <Popup
                            x:Name="SkillPopup"
                            AllowsTransparency="True"
                            Placement="MousePoint"
                            StaysOpen="True">
                            <Border
                                Padding="10"
                                Background="#CC000000"
                                CornerRadius="8">
                                <StackPanel>
                                    <!--  顶部标题  -->
                                    <TextBlock
                                        Margin="0,0,0,6"
                                        FontSize="12"
                                        FontWeight="Regular"
                                        Foreground="White"
                                        Style="{StaticResource FooterTextContent}"
                                        Text="惊奇猫猫盒" />

                                    <!--  技能列表  -->
                                    <ItemsControl x:Name="SkillList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0,8,0,0">
                                                    <!--  技能名  -->
                                                    <TextBlock
                                                        FontWeight="Bold"
                                                        Foreground="Gold"
                                                        Style="{StaticResource FooterTextContent}"
                                                        Text="{Binding SkillName}" />
                                                    <!--  总伤害  -->
                                                    <TextBlock Style="{StaticResource FooterTextContent}">
                                                        <Run Foreground="White" Text="总伤害：" />
                                                        <Run Foreground="White" Text="{Binding TotalDamage}" />
                                                    </TextBlock>
                                                    <!--  命中 / 暴击次数 / 平均伤害  -->
                                                    <TextBlock Style="{StaticResource FooterTextContent}">
                                                        <Run Foreground="Orange" Text="命中：" />
                                                        <Run Foreground="White" Text="{Binding HitCount}" />
                                                        <Run Foreground="Orange" Text="    暴击次数：" />
                                                        <Run Foreground="White" Text="{Binding CritCount}" />
                                                        <Run Foreground="Orange" Text="    平均伤害：" />
                                                        <Run Foreground="White" Text="{Binding AvgDamage}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>

                    <!--  设置按钮  -->
                    <Button
                        x:Name="SetButton"
                        Width="18"
                        Margin="0,5,27,5"
                        Click="SetButton_Click"
                        Content="&#xE600;"
                        Style="{StaticResource StatisticFuncButton}">
                        <Button.ContextMenu>
                            <ContextMenu Style="{StaticResource ModernContextMenu}">
                                <!--  只给 MenuItem 应用样式，Separator 不受影响  -->
                                <ContextMenu.Resources>
                                    <Style BasedOn="{StaticResource ModernMenuItem}" TargetType="MenuItem" />
                                </ContextMenu.Resources>


                                <MenuItem
                                    Header="统计BOSS"
                                    IsCheckable="True"
                                    IsChecked="False"
                                    Style="{StaticResource CheckableMenuItem}" />
                                <MenuItem
                                    Header="显示总伤"
                                    IsCheckable="True"
                                    IsChecked="False"
                                    Style="{StaticResource CheckableMenuItem}" />

                                <MenuItem Header="个人模式" />
                                <!--  记录设置  -->
                                <MenuItem Header="记录设置" ItemContainerStyle="{StaticResource CheckableMenuItem}">
                                    <MenuItem Click="RecordSettingsMenuItem_Click" Header="记录每一次" />
                                    <MenuItem Click="RecordSettingsMenuItem_Click" Header="不记录1分钟以下" />
                                    <MenuItem Click="RecordSettingsMenuItem_Click" Header="不记录2分钟以下" />
                                </MenuItem>
                                <!--  历史记录  -->
                                <MenuItem
                                    x:Name="miHistory"
                                    Header="历史记录"
                                    ItemContainerStyle="{StaticResource CheckableMenuItem}" />
                                <!--  打桩模式  -->
                                <MenuItem Header="打桩模式" ItemContainerStyle="{StaticResource CheckableMenuItem}">
                                    <MenuItem
                                        Click="PilingMenuItem_Click"
                                        Header="个人打桩 "
                                        IsCheckable="True" />
                                    <MenuItem
                                        Click="PilingMenuItem_Click"
                                        Header="协会打桩"
                                        IsCheckable="True" />
                                    <MenuItem
                                        Click="PilingMenuItem_Click"
                                        Header="极限打桩"
                                        IsCheckable="True" />
                                </MenuItem>

                                <MenuItem Header="技能日记" />

                                <Separator />
                                <MenuItem Click="ExitButton_Click" Header="退出" />
                            </ContextMenu>
                        </Button.ContextMenu>

                    </Button>
                    <!--  隐藏按钮  -->
                    <Button
                        x:Name="PullButton"
                        Width="18"
                        Margin="0,5,4,5"
                        Click="PullButton_Click"
                        Content=""
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource StatisticFuncButton}">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="0" />
                                <TranslateTransform />
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </Grid>
            </Border>

            <ctrl:SortedProgressBarList x:Name="ProgressBarList" Style="{StaticResource SPBList}">
                <ctrl:SortedProgressBarList.ProgressBarSlotDataTemplate>
                    <DataTemplate>
                        <Grid>

                            <!--  名次  -->
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Panel.ZIndex="999"
                                FontFamily="pack://application:,,,/Assets/Fonts/#SAO Welcome TT"
                                FontSize="18"
                                Foreground="White"
                                IsHitTestVisible="False"
                                Text="{Binding OrderText}" />

                            <!--  职业图标  -->
                            <Image
                                Width="11"
                                Margin="38,2,0,1"
                                HorizontalAlignment="Left"
                                Panel.ZIndex="999"
                                IsHitTestVisible="False"
                                Source="{Binding Icon}" />

                            <!--  昵称  -->
                            <TextBlock
                                Margin="55,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Panel.ZIndex="999"
                                FontFamily="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="White"
                                IsHitTestVisible="False"
                                Text="{Binding Nickname}" />

                            <!--  数值  -->
                            <TextBlock
                                Margin="0,3,8,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Panel.ZIndex="999"
                                FontFamily="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="White"
                                IsHitTestVisible="False"
                                Text="{Binding ValueText}" />
                        </Grid>
                    </DataTemplate>
                </ctrl:SortedProgressBarList.ProgressBarSlotDataTemplate>
            </ctrl:SortedProgressBarList>


            <Border x:Name="ContentBorder" Style="{StaticResource FooterContentBorder}">
                <Grid>
                    <TextBlock
                        Width="28"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Left"
                        Style="{StaticResource FooterTextContent}"
                        Text="[1]" />
                    <TextBlock
                        Width="53"
                        Margin="32,0,0,0"
                        HorizontalAlignment="Left"
                        Style="{StaticResource FooterTextContent}"
                        Text="00:00" />
                    <TextBlock
                        Width="118"
                        Margin="0,0,4,0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource FooterTextContent}"
                        Text="2.24万 DPS"
                        TextAlignment="Right" />
                </Grid>
            </Border>

        </Grid>
    </Border>


</Window>
