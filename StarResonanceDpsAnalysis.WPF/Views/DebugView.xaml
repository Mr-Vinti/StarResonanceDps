<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.DebugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="Debug View"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance viewModels:DebugFunctions}"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- Log level color brushes -->
        <SolidColorBrush x:Key="TraceBrush" Color="Gray"/>
        <SolidColorBrush x:Key="DebugBrush" Color="DarkBlue"/>
        <SolidColorBrush x:Key="InfoBrush" Color="Green"/>
        <SolidColorBrush x:Key="WarnBrush" Color="Orange"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="Red"/>
        <SolidColorBrush x:Key="CriticalBrush" Color="DarkRed"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Background="LightGray" Padding="10">
            <WrapPanel Orientation="Horizontal">
                <Button Command="{Binding LoadDebugDataSourceCommand}" Content="Load PCAP" Margin="0,0,5,0" Padding="8,4"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                
                <Button Command="{Binding ClearLogsCommand}" Content="Clear Logs" Margin="5,0" Padding="8,4"/>
                <Button Command="{Binding AddTestLogCommand}" Content="Add Test Log" Margin="5,0" Padding="8,4"/>
                <Button Command="{Binding SaveLogsCommand}" Content="Save Logs" Margin="5,0" Padding="8,4"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                
                <CheckBox IsChecked="{Binding AutoScrollEnabled}" Content="Auto Scroll" Margin="5,0" VerticalAlignment="Center"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                
                <TextBlock Text="Level:" Margin="5,0" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding AvailableLogLevels}" 
                          SelectedItem="{Binding SelectedLogLevel}" 
                          Width="100" 
                          Margin="2,0,5,0"/>
                
                <TextBlock Text="Filter:" Margin="5,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                         Width="150" 
                         Margin="2,0,5,0"
                         ToolTip="Filter logs by message or category content"/>
            </WrapPanel>
        </Border>

        <!-- Log Display -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer x:Name="LogScrollViewer" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredLogs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="4,2" 
                                    BorderBrush="LightGray" 
                                    BorderThickness="0,0,0,1"
                                    Background="{Binding Level, Converter={x:Static local:LogLevelToBackgroundConverter.Instance}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Timestamp -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                               FontFamily="Consolas" 
                                               FontSize="10"
                                               Foreground="Gray"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Log Level -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Level}" 
                                               FontWeight="Bold" 
                                               FontSize="10"
                                               Foreground="{Binding Level, Converter={x:Static local:LogLevelToBrushConverter.Instance}}"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Category -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Category}" 
                                               FontFamily="Consolas" 
                                               FontSize="10"
                                               Foreground="DarkBlue"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Message -->
                                    <TextBlock Grid.Column="3" 
                                               Text="{Binding Message}" 
                                               TextWrapping="Wrap" 
                                               FontFamily="Consolas" 
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               ToolTip="{Binding Exception, Converter={x:Static local:ExceptionToStringConverter.Instance}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="LightGray" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding LogCount, StringFormat='Total: {0} logs'}" Margin="0,0,15,0"/>
                <TextBlock Text="{Binding FilteredLogCount, StringFormat='Filtered: {0} logs'}" Margin="0,0,15,0"/>
                <TextBlock Text="{Binding LastLogTime, StringFormat='Last: {0:HH:mm:ss}'}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
