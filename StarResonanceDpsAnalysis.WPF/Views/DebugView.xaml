<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.DebugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="Debug View"
    Width="1000"
    Height="700"
    d:DataContext="{d:DesignInstance viewModels:DebugFunctions}"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Cached converter instances for better performance  -->
        <local:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter" />
        <local:LogLevelToBackgroundConverter x:Key="LogLevelToBackgroundConverter" />
        <local:ExceptionToStringConverter x:Key="ExceptionToStringConverter" />

        <!--  Optimized data template with pre-computed display values  -->
        <DataTemplate x:Key="LogEntryTemplate">
            <Grid Margin="2,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Use pre-computed TimeDisplay for better performance  -->
                <TextBlock
                    Grid.Column="0"
                    Text="{Binding TimeDisplay}"
                    FontFamily="Consolas"
                    FontSize="10"
                    Foreground="Gray"
                    VerticalAlignment="Center" />

                <!--  Use pre-computed LevelDisplay and cached converter  -->
                <TextBlock
                    Grid.Column="1"
                    Text="{Binding LevelDisplay}"
                    FontSize="10"
                    FontWeight="Bold"
                    Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"
                    VerticalAlignment="Center" />

                <TextBlock
                    Grid.Column="2"
                    Text="{Binding Category}"
                    FontFamily="Consolas"
                    FontSize="10"
                    Foreground="DarkBlue"
                    TextTrimming="CharacterEllipsis"
                    VerticalAlignment="Center" />

                <TextBlock
                    Grid.Column="3"
                    Text="{Binding Message}"
                    FontFamily="Consolas"
                    FontSize="11"
                    TextTrimming="CharacterEllipsis"
                    ToolTip="{Binding Exception, Converter={StaticResource ExceptionToStringConverter}}"
                    VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>

        <!--  Optimized item container style  -->
        <Style x:Key="LogEntryContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Background"
                    Value="{Binding Level, Converter={StaticResource LogLevelToBackgroundConverter}}" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="LightBlue" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="AliceBlue" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Control Panel  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="LightGray">
            <WrapPanel Orientation="Horizontal">
                <Button
                    Margin="0,0,5,0"
                    Padding="8,4"
                    Command="{Binding LoadDebugDataSourceCommand}"
                    Content="Load PCAP" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button Command="{Binding AddSampleDataCommand}" Content="AddSampleData" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <Button
                    Margin="5,0"
                    Padding="8,4"
                    Command="{Binding ClearLogsCommand}"
                    Content="Clear Logs" />
                <Button
                    Margin="5,0"
                    Padding="8,4"
                    Command="{Binding AddTestLogCommand}"
                    Content="Add Test Log" />
                <Button
                    Margin="5,0"
                    Padding="8,4"
                    Command="{Binding SaveLogsCommand}"
                    Content="Save Logs" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <CheckBox
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Content="Auto Scroll"
                    IsChecked="{Binding AutoScrollEnabled}" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Text="Level:" />
                <ComboBox
                    Width="100"
                    Margin="2,0,5,0"
                    ItemsSource="{Binding AvailableLogLevels}"
                    SelectedItem="{Binding SelectedLogLevel}" />

                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Text="Filter:" />
                <TextBox
                    Width="150"
                    Margin="2,0,5,0"
                    Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Filter logs by message or category content" />
            </WrapPanel>
        </Border>

        <!--  Optimized Log Display with ListBox for better virtualization performance  -->
        <Border
            Grid.Row="1"
            BorderBrush="Gray"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Border Grid.Row="0" Background="LightGray" BorderBrush="Gray" BorderThickness="0,0,0,1">
                    <Grid Margin="2,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Time" FontWeight="Bold" FontSize="10" />
                        <TextBlock Grid.Column="1" Text="Level" FontWeight="Bold" FontSize="10" />
                        <TextBlock Grid.Column="2" Text="Category" FontWeight="Bold" FontSize="10" />
                        <TextBlock Grid.Column="3" Text="Message" FontWeight="Bold" FontSize="10" />
                    </Grid>
                </Border>

                <ListBox
                    x:Name="LogListBox"
                    Grid.Row="1"
                    ItemsSource="{Binding FilteredLogs}"
                    ItemTemplate="{StaticResource LogEntryTemplate}"
                    ItemContainerStyle="{StaticResource LogEntryContainerStyle}"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    VirtualizingPanel.IsContainerVirtualizable="True"
                    VirtualizingPanel.ScrollUnit="Pixel"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    BorderThickness="0"
                    SelectionMode="Extended"
                    Background="White" />
            </Grid>
        </Border>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Padding="8,4"
            Background="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,15,0" Text="{Binding LogCount, StringFormat='Total: {0} logs'}" />
                <TextBlock Margin="0,0,15,0" Text="{Binding FilteredLogCount, StringFormat='Filtered: {0} logs'}" />
                <TextBlock Text="{Binding LastLogTime, StringFormat='Last: {0:HH:mm:ss}'}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>