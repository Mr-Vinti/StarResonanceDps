<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.DebugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="Debug View"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance viewModels:DebugFunctions}"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Log level color brushes  -->
        <SolidColorBrush x:Key="TraceBrush" Color="Gray" />
        <SolidColorBrush x:Key="DebugBrush" Color="DarkBlue" />
        <SolidColorBrush x:Key="InfoBrush" Color="Green" />
        <SolidColorBrush x:Key="WarnBrush" Color="Orange" />
        <SolidColorBrush x:Key="ErrorBrush" Color="Red" />
        <SolidColorBrush x:Key="CriticalBrush" Color="DarkRed" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Control Panel  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="LightGray">
            <WrapPanel Orientation="Horizontal">
                <Button
                    Margin="0,0,5,0"
                    Padding="8,4"
                    Command="{Binding LoadDebugDataSourceCommand}"
                    Content="Load PCAP" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <Button
                    Margin="5,0"
                    Padding="8,4"
                    Command="{Binding ClearLogsCommand}"
                    Content="Clear Logs" />
                <Button
                    Margin="5,0"
                    Padding="8,4"
                    Command="{Binding AddTestLogCommand}"
                    Content="Add Test Log" />
                <Button
                    Margin="5,0"
                    Padding="8,4"
                    Command="{Binding SaveLogsCommand}"
                    Content="Save Logs" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <CheckBox
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Content="Auto Scroll"
                    IsChecked="{Binding AutoScrollEnabled}" />
                <Separator Margin="5,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Text="Level:" />
                <ComboBox
                    Width="100"
                    Margin="2,0,5,0"
                    ItemsSource="{Binding AvailableLogLevels}"
                    SelectedItem="{Binding SelectedLogLevel}" />

                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Text="Filter:" />
                <TextBox
                    Width="150"
                    Margin="2,0,5,0"
                    Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Filter logs by message or category content" />
            </WrapPanel>
        </Border>

        <!--  Log Display  -->
        <Border
            Grid.Row="1"
            BorderBrush="Gray"
            BorderThickness="1">
            <ScrollViewer
                x:Name="LogScrollViewer"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredLogs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="4,2"
                                Background="{Binding Level, Converter={x:Static local:LogLevelToBackgroundConverter.Instance}}"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Timestamp  -->
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" />

                                    <!--  Log Level  -->
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="{Binding Level, Converter={x:Static local:LogLevelToBrushConverter.Instance}}"
                                        Text="{Binding Level}" />

                                    <!--  Category  -->
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="10"
                                        Foreground="DarkBlue"
                                        Text="{Binding Category}" />

                                    <!--  Message  -->
                                    <TextBlock
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="11"
                                        Text="{Binding Message}"
                                        TextWrapping="Wrap"
                                        ToolTip="{Binding Exception, Converter={x:Static local:ExceptionToStringConverter.Instance}}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Padding="8,4"
            Background="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,15,0" Text="{Binding LogCount, StringFormat='Total: {0} logs'}" />
                <TextBlock Margin="0,0,15,0" Text="{Binding FilteredLogCount, StringFormat='Filtered: {0} logs'}" />
                <TextBlock Text="{Binding LastLogTime, StringFormat='Last: {0:HH:mm:ss}'}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
