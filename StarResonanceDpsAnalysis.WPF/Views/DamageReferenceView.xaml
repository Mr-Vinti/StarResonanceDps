<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.DamageReferenceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="伤害参考"
    Width="770"
    Height="780"
    MinWidth="770"
    MinHeight="300"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="ProfessionSelectGrid" TargetType="Grid">
            <Setter Property="Background" Value="#FFF" />
        </Style>

        <Style x:Key="DamageReferenceRibbon" TargetType="Border">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#9CF" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Margin" Value="10,0,0,0" />
        </Style>

        <Style
            x:Key="DamageReferenceRibbonText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#FFF" />
        </Style>

        <Style x:Key="ProfessionSelectBorder" TargetType="Border">
            <Setter Property="Padding" Value="0,0,4,0" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="#EEE" />
            <Setter Property="CornerRadius" Value="15" />
        </Style>

        <Style x:Key="ProfessionSelectStackPanel" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style x:Key="TabSelectorToggleStyle" TargetType="ToggleButton">
            <Setter Property="MinWidth" Value="65" />
            <Setter Property="Height" Value="22" />
            <Setter Property="Margin" Value="4,4,0,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#777" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FFF" />
                                <Setter Property="Foreground" Value="#000" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Opacity="0.3"
                                            ShadowDepth="0"
                                            Color="#000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8F8F8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataTableGrid" TargetType="Grid" />

        <Style x:Key="DataTableTitleGrid" TargetType="Grid" />

        <Style
            x:Key="DataTableTitleText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,10,0,10" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="DataTableBox" TargetType="Grid" />

        <Style x:Key="DataTableEmptyGrid" TargetType="Grid" />

        <Style x:Key="DataTableEmptyImg" TargetType="Image">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,-35,0,0" />
        </Style>

        <Style
            x:Key="DataTableEmptyText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,35,0,0" />
        </Style>

        <Style x:Key="FunctionTips" TargetType="Grid" />

        <Style
            x:Key="FunctionTipsText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>
    </Window.Resources>

    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:Header Title="Skill Breakdown" Grid.Row="0" />

            <Grid Grid.Row="1" Style="{StaticResource ProfessionSelectGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DamageReferenceRibbon}">
                    <TextBlock Style="{StaticResource DamageReferenceRibbonText}" Text="伤害参考" />
                </Border>

                <Border Grid.Column="2" Style="{StaticResource ProfessionSelectBorder}">
                    <StackPanel x:Name="TabControlIndexChanger" Style="{StaticResource ProfessionSelectStackPanel}">

                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="0">
                            全职业
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="1">
                            雷影剑士
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="2">
                            冰魔导师
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="4">
                            青岚骑士
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="5">
                            森语者
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="9">
                            巨刃守护者
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="11">
                            神射手
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="12">
                            神盾骑士
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="13">
                            灵魂乐手
                        </ToggleButton>

                    </StackPanel>
                </Border>

            </Grid>

            <Grid Grid.Row="2" Style="{StaticResource DataTableGrid}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Style="{StaticResource DataTableTitleGrid}">
                    <TextBlock Style="{StaticResource DataTableTitleText}" Text="伤害参考" />
                </Grid>

                <Grid Grid.Row="1" Style="{StaticResource DataTableBox}">

                    <Grid Style="{StaticResource DataTableEmptyGrid}">
                        <Image Source="pack://application:,,,/Assets/Images/cancel_normal.png" Style="{StaticResource DataTableEmptyImg}" />
                        <TextBlock Style="{StaticResource DataTableEmptyText}" Text="暂无数据" />
                    </Grid>

                    <!--<TabControl x:Name="MainTabControl"
                                Style="{StaticResource CustomTabControlStyle}"
                                SelectedIndex="0">
                    -->
                    <!--  TODO: 实际数据 DataTable  -->
                    <!--

                        <TabItem Header="0">
                            <Grid>

                                <TextBlock Text="测试1"/>

                            </Grid>
                        </TabItem>

                        <TabItem Header="1">
                            <Grid>

                                <TextBlock Text="测试2"/>

                            </Grid>
                        </TabItem>

                    </TabControl>-->

                </Grid>

                <Grid Grid.Row="2" Style="{StaticResource FunctionTips}">
                    <TextBlock Style="{StaticResource FunctionTipsText}">
                        以上数据仅供娱乐与参考，严禁用于战力歧视等破坏游戏社区环境的行为；一经发现，永久取消该功能的使用资格。
                    </TextBlock>
                </Grid>

            </Grid>

            <ctrl:Footer
                Grid.Row="3"
                Height="50"
                CancelClick="Footer_CancelClick"
                ConfirmClick="Footer_ConfirmClick" />
        </Grid>
    </Border>
</Window>