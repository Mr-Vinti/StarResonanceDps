<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.SkillBreakdownView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="技能详情"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    d:DataContext="{d:DesignInstance viewModels:SkillBreakdownViewModel}"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="InfoAndTypeGrid" TargetType="Grid">
            <Setter Property="Height" Value="60" />
            <Setter Property="Background" Value="#FFF" />
        </Style>

        <Style
            x:Key="InfoText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>

        <Style
            x:Key="InfoNameText"
            BasedOn="{StaticResource InfoText}"
            TargetType="TextBlock">
            <Setter Property="Margin" Value="30,0,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="StatisticCard" TargetType="ctrl:CollapsibleCard">
            <Setter Property="Margin" Value="10,10,10,0" />
        </Style>

        <Style x:Key="BlueCardBorder" TargetType="Border">
            <Setter Property="Background" Value="#2297F4" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.5"
                        ShadowDepth="0"
                        Color="#000" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="CardTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <Style x:Key="InfoSpliter" TargetType="Grid">
            <Setter Property="Width" Value="1" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>

        <Style x:Key="FieldLineMB" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <Style
            x:Key="CardInfoTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style
            x:Key="CardInfoValue"
            BasedOn="{StaticResource CardInfoTitle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <!--  Custom TabControl style: we remove built-in header area because we drive tabs from external selector  -->
        <Style x:Key="CustomTabControlStyle" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="8" ContentSource="SelectedContent" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Simple segmented ToggleButton style used for selector  -->
        <Style x:Key="TabSelectorToggleStyle" TargetType="ToggleButton">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="4,4,0,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#777" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FFF" />
                                <Setter Property="Foreground" Value="#000" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Opacity="0.3"
                                            ShadowDepth="0"
                                            Color="#000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8F8F8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="Template1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ctrl:CollapsibleCard
                        Title="DPS/HPS/DTPS实时曲线图"
                        Grid.Row="0"
                        IsExpanded="True"
                        Style="{StaticResource StatisticCard}">
                        <TextBlock HorizontalAlignment="Center" Text="假装这里有个折线图" />
                    </ctrl:CollapsibleCard>

                    <ctrl:CollapsibleCard
                        Title="技能占比分布图"
                        Grid.Row="1"
                        IsExpanded="True"
                        Style="{StaticResource StatisticCard}">
                        <TextBlock HorizontalAlignment="Center" Text="假装这里有个饼图" />
                    </ctrl:CollapsibleCard>

                    <ctrl:CollapsibleCard
                        Title="伤害分布"
                        Grid.Row="2"
                        IsExpanded="True"
                        Style="{StaticResource StatisticCard}">
                        <TextBlock HorizontalAlignment="Center" Text="假装这里有个条形图" />
                    </ctrl:CollapsibleCard>
                </Grid>

                <GridSplitter Grid.Column="1" />

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource BlueCardBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource CardTitle}"
                                    Text="伤害信息" />

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="总伤害" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="42.64K" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="秒伤" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="29.01K" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="命中次数" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="6" />
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Column="1" Style="{StaticResource InfoSpliter}" />

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="暴击率" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="16.67%" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="幸运率" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="0%" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="暴击次数" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="1" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource BlueCardBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource CardTitle}"
                                    Text="伤害分布" />

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="普通伤害" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="28.71K" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="暴击伤害" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="13.92K" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="幸运次数" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="0" />
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Column="1" Style="{StaticResource InfoSpliter}" />

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="幸运伤害" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="0" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="平均伤害" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="7106" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="受击次数" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="3" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock
                            Height="120"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            假装这里有个表单
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:Header Title="Skill Breakdown" Grid.Row="0" />

            <Grid Grid.Row="1" Style="{StaticResource InfoAndTypeGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource InfoNameText}"
                    Text="--测试名称--" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource InfoText}"
                    Text="UID: 123456" />
                <TextBlock
                    Grid.Column="2"
                    Style="{StaticResource InfoText}"
                    Text="战力: 25000" />
                <TextBlock
                    Grid.Column="3"
                    Style="{StaticResource InfoText}"
                    Text="等级: 60" />
                <TextBlock
                    Grid.Column="4"
                    Style="{StaticResource InfoText}"
                    Text="臂章: 190" />

                <Border
                    Grid.Column="6"
                    Margin="10"
                    Padding="0,0,4,0"
                    Background="#EEE"
                    CornerRadius="20">
                    <!--  segmented selector: each ToggleButton sets the TabControl.SelectedIndex in code-behind  -->
                    <StackPanel
                        x:Name="TabControlIndexChanger"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="0">
                            输出
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="1">
                            治疗
                        </ToggleButton>
                        <ToggleButton
                            Click="TabSelector_Click"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="2">
                            承伤
                        </ToggleButton>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Note: TabPanel was incorrect; use TabItem. Added x:Name and style to remove built-in headers.  -->
            <TabControl
                x:Name="MainTabControl"
                Grid.Row="2"
                SelectedIndex="0"
                Style="{StaticResource CustomTabControlStyle}">

                <TabControl.Resources>
                    <Style x:Key="TextBlockExampleStyle" TargetType="TextBlock">
                        <Setter Property="Margin" Value="8" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="100" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Summary">
                    <ScrollViewer>
                        <ContentPresenter ContentTemplate="{StaticResource Template1}" />
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Details">
                    <Grid Background="IndianRed">
                        <TextBlock Style="{StaticResource TextBlockExampleStyle}">2</TextBlock>
                    </Grid>
                </TabItem>
                <TabItem Header="Graph">
                    <Grid Background="DarkOliveGreen">
                        <TextBlock Style="{StaticResource TextBlockExampleStyle}">3</TextBlock>
                    </Grid>
                </TabItem>
            </TabControl>

            <ctrl:Footer
                Grid.Row="3"
                Height="50"
                CancelClick="Footer_CancelClick"
                CancelCommand="{Binding CancelCommand}"
                ConfirmClick="Footer_ConfirmClick"
                ConfirmCommand="{Binding ConfirmCommand}" />
        </Grid>
    </Border>
</Window>