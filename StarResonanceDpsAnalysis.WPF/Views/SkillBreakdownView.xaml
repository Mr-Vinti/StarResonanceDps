<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.SkillBreakdownView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:loc="clr-namespace:StarResonanceDpsAnalysis.WPF.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="{lex:Loc Key={x:Static loc:LocalizationKeys.Window_SkillBreakdown_Title}}"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    d:DataContext="{d:DesignInstance viewModels:SkillBreakdownViewModel}"
    lex:ResxLocalizationProvider.DefaultAssembly="StarResonanceDpsAnalysis.WPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    PreviewKeyDown="Window_PreviewKeyDown"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="InfoAndTypeGrid" TargetType="Grid">
            <Setter Property="Height" Value="60" />
            <Setter Property="Background" Value="#FFF" />
        </Style>

        <Style
            x:Key="InfoText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>

        <Style
            x:Key="InfoNameText"
            BasedOn="{StaticResource InfoText}"
            TargetType="TextBlock">
            <Setter Property="Margin" Value="30,0,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="StatisticCard" TargetType="ctrl:CollapsibleCard">
            <Setter Property="Margin" Value="10,10,10,0" />
        </Style>

        <Style x:Key="BlueCardBorder" TargetType="Border">
            <Setter Property="Background" Value="#2297F4" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.5"
                        ShadowDepth="0"
                        Color="#000" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="CardTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <Style x:Key="InfoSpliter" TargetType="Grid">
            <Setter Property="Width" Value="1" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>

        <Style x:Key="FieldLineMB" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <Style
            x:Key="CardInfoTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style
            x:Key="CardInfoValue"
            BasedOn="{StaticResource CardInfoTitle}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <!--  Custom TabControl style: we remove built-in header area because we drive tabs from external selector  -->
        <Style x:Key="CustomTabControlStyle" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="8" ContentSource="SelectedContent" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Simple segmented ToggleButton style used for selector  -->
        <Style x:Key="TabSelectorToggleStyle" TargetType="ToggleButton">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="4,4,0,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#777" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FFF" />
                                <Setter Property="Foreground" Value="#000" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Opacity="0.3"
                                            ShadowDepth="0"
                                            Color="#000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8F8F8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="Template1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ctrl:CollapsibleCard
                        Title="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Card_RealtimeChart}}"
                        Grid.Row="0"
                        IsExpanded="True"
                        Style="{StaticResource StatisticCard}">
                        <TextBlock HorizontalAlignment="Center" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Placeholder_LineChart}}" />
                    </ctrl:CollapsibleCard>

                    <ctrl:CollapsibleCard
                        Title="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Card_ShareChart}}"
                        Grid.Row="1"
                        IsExpanded="True"
                        Style="{StaticResource StatisticCard}">
                        <TextBlock HorizontalAlignment="Center" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Placeholder_PieChart}}" />
                    </ctrl:CollapsibleCard>

                    <ctrl:CollapsibleCard
                        Title="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Card_DamageDistribution}}"
                        Grid.Row="2"
                        IsExpanded="True"
                        Style="{StaticResource StatisticCard}">
                        <TextBlock HorizontalAlignment="Center" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Placeholder_BarChart}}" />
                    </ctrl:CollapsibleCard>
                </Grid>

                <GridSplitter Grid.Column="1" />

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource BlueCardBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource CardTitle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Section_DamageInfo}}" />

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_TotalDamage}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_TotalDamage}}" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_Dps}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_Dps}}" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_HitCount}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_HitCount}}" />
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Column="1" Style="{StaticResource InfoSpliter}" />

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_CritRate}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_CritRate}}" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_LuckRate}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_LuckRate}}" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_CritCount}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_CritCount}}" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource BlueCardBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource CardTitle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Section_DamageDistribution}}" />

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_NormalDamage}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_NormalDamage}}" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_CritDamage}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_CritDamage}}" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_LuckCount}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_LuckCount}}" />
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Column="1" Style="{StaticResource InfoSpliter}" />

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_LuckDamage}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_LuckDamage}}" />
                                        </Grid>
                                        <Grid Grid.Row="1" Style="{StaticResource FieldLineMB}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_AverageDamage}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_AverageDamage}}" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource CardInfoTitle}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Label_DamageTakenCount}}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Style="{StaticResource CardInfoValue}"
                                                Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Value_DamageTakenCount}}" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock
                            Height="120"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Placeholder_Form}}" />
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:Header Title="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Header_Title}}" Grid.Row="0" />

            <Grid Grid.Row="1" Style="{StaticResource InfoAndTypeGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource InfoNameText}"
                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Info_Name}}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource InfoText}"
                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Info_Uid}}" />
                <TextBlock
                    Grid.Column="2"
                    Style="{StaticResource InfoText}"
                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Info_Power}}" />
                <TextBlock
                    Grid.Column="3"
                    Style="{StaticResource InfoText}"
                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Info_Level}}" />
                <TextBlock
                    Grid.Column="4"
                    Style="{StaticResource InfoText}"
                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Info_Badge}}" />


                <Border
                    Grid.Column="6"
                    Margin="10"
                    Padding="0,0,4,0"
                    Background="#EEE"
                    CornerRadius="20">
                    <!--  segmented selector: each ToggleButton sets the TabControl.SelectedIndex in code-behind  -->
                    <StackPanel
                        x:Name="TabControlIndexChanger"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ToggleButton
                            Click="TabSelector_Click"
                            Content="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Tab_Output}}"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="0" />
                        <ToggleButton
                            Click="TabSelector_Click"
                            Content="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Tab_Healing}}"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="1" />
                        <ToggleButton
                            Click="TabSelector_Click"
                            Content="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Tab_Tanking}}"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="2" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Note: TabPanel was incorrect; use TabItem. Added x:Name and style to remove built-in headers.  -->
            <TabControl
                x:Name="MainTabControl"
                Grid.Row="2"
                SelectedIndex="0"
                Style="{StaticResource CustomTabControlStyle}">

                <TabControl.Resources>
                    <Style x:Key="TextBlockExampleStyle" TargetType="TextBlock">
                        <Setter Property="Margin" Value="8" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="100" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="TabItem_Summary" Header="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Tab_Summary}}">
                    <ScrollViewer>
                        <ContentPresenter ContentTemplate="{StaticResource Template1}" />
                    </ScrollViewer>
                </TabItem>
                <TabItem x:Name="TabItem_Details" Header="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Tab_Details}}">
                    <Grid Background="IndianRed">
                        <TextBlock Style="{StaticResource TextBlockExampleStyle}" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Placeholder_Details}}" />
                    </Grid>
                </TabItem>
                <TabItem x:Name="TabItem_Graph" Header="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Tab_Graph}}">
                    <Grid Background="DarkOliveGreen">
                        <TextBlock Style="{StaticResource TextBlockExampleStyle}" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.SkillBreakdown_Placeholder_Graph}}" />
                    </Grid>
                </TabItem>
            </TabControl>

            <ctrl:Footer
                Grid.Row="3"
                Height="50"
                CancelClick="Footer_CancelClick"
                CancelCommand="{Binding CancelCommand}"
                ConfirmClick="Footer_ConfirmClick"
                ConfirmCommand="{Binding ConfirmCommand}" />
        </Grid>
    </Border>
</Window>
