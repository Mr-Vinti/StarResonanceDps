<Window x:Class="StarResonanceDpsAnalysis.WPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
        xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
        mc:Ignorable="d"
        Title="SettingForm" Height="780" Width="620" Padding="5"
        Style="{StaticResource TransparentWindow}">
    <Window.Resources>
        <Style x:Key="MainBackground" TargetType="Grid">

        </Style>

        <Style x:Key="Header" TargetType="ctrl:Header">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>
    <Border Style="{StaticResource ShadowWindowBorder}" Background="#EFEFEF">
        <Grid>
            <ctrl:Header Style="{StaticResource Header}" Title="Setting"/>

            <ctrl:CustomizeProgressBar x:Name="Test" Height="40" CornerRadius="5" Margin="0,40,0,0" VerticalAlignment="Top">
                <ctrl:CustomizeProgressBar.Slot>
                    <Grid>
                        <Image Source="pack://application:,,,/Assets/Images/Crown.png" 
                               Width="28" Height="28" 
                               HorizontalAlignment="Left" 
                               Margin="10,0,0,0"/>
                        <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#SAO Welcome TT"
                                   FontSize="24"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="50,0,0,0"
                                   Foreground="#FFF"
                                   Text="01."/>
                    </Grid>
                </ctrl:CustomizeProgressBar.Slot>
            </ctrl:CustomizeProgressBar>

            <ctrl:SortedProgressBarList x:Name="ProgressBarList" Margin="0,100,0,10" ProgressBarMargin="3,3,3,3">
                <ctrl:SortedProgressBarList.ProgressBarSlotDataTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Name}"/>
                        </Grid>
                    </DataTemplate>
                </ctrl:SortedProgressBarList.ProgressBarSlotDataTemplate>
            </ctrl:SortedProgressBarList>
        </Grid>
    </Border>
</Window>
