<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:StarResonanceDpsAnalysis.WPF.Behaviors"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="设置"
    Width="455"
    Height="630"
    MinWidth="450"
    MinHeight="630"
    Padding="5"
    d:DataContext="{d:DesignInstance Type=viewModels:SettingsDesignTimeViewModel,
                                     IsDesignTimeCreatable=True}"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <b:Interaction.Behaviors />

    <Window.Resources>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#阿里妈妈数黑体" />
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        
        <Style x:Key="CardHeaderGridStyle" TargetType="Grid">
            <Setter Property="Height" Value="{StaticResource CardHeaderHeight}" />
        </Style>

        <Style
            x:Key="TableTextBlock"
            BasedOn="{StaticResource {x:Type TextBlock}}"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style BasedOn="{StaticResource TableTextBlock}" TargetType="TextBlock" />

    </Window.Resources>
    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ctrl:Header Title="Setting" Grid.Row="0" />

            <Grid Grid.Row="1">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="VerticalAlignment" Value="Top" />
                        <Setter Property="Height" Value="35" />
                        <Setter Property="Background" Value="{DynamicResource AccentSolidBrush}" />
                    </Style>
                </Grid.Style>
                <TextBlock Style="{StaticResource HeaderText}" Text="设置" />
            </Grid>

            <ScrollViewer Grid.Row="2">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                    </Style>
                </ScrollViewer.Style>
                <VirtualizingStackPanel IsVirtualizing="True">
                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource CardHeaderMainTitleStyle}"
                                    Text="基础设置" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="自动设置错误时可手动设置" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center">
                                    监听网卡
                                </TextBlock>
                                <ComboBox
                                    Grid.Column="1"
                                    DisplayMemberPath="Description"
                                    ItemsSource="{Binding AvailableNetworkAdapters, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedIndex="0"
                                    SelectedItem="{Binding AppConfig.PreferredNetworkAdapter}"
                                    SelectedValuePath="Description"
                                    Style="{StaticResource AntComboBoxStyle}" />
                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>

                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource CardHeaderMainTitleStyle}" Text="按键设置" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="按下 Delete 删除选择的键位" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid Height="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock>
                                    鼠标穿透
                                </TextBlock>
                                <TextBox
                                    x:Name="MouseThroughTextBox"
                                    Grid.Column="1"
                                    Margin="2"
                                    IsReadOnly="True"
                                    Style="{StaticResource AntTextBoxStyle}"
                                    Text="{Binding AppConfig.MouseThroughShortcut, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource KeyToStringConverter}}"
                                    ToolTip="Focus here and press a shortcut (e.g. Ctrl+F6). Press Delete to clear.">
                                    <b:Interaction.Behaviors>
                                        <behaviors:KeyDownCommandBehavior Command="{Binding HandleMouseThroughShortcutCommand}" />
                                    </b:Interaction.Behaviors>
                                </TextBox>
                                <TextBlock Grid.Column="3">
                                    清空数据
                                </TextBlock>
                                <TextBox
                                    x:Name="ClearDataTextBox"
                                    Grid.Column="4"
                                    Margin="2"
                                    IsReadOnly="True"
                                    Style="{StaticResource AntTextBoxStyle}"
                                    Text="{Binding AppConfig.ClearDataShortcut, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource KeyToStringConverter}}"
                                    ToolTip="Focus here and press a shortcut (e.g. F9). Press Delete to clear.">
                                    <b:Interaction.Behaviors>
                                        <behaviors:KeyDownCommandBehavior Command="{Binding HandleClearDataShortcutCommand}" />
                                    </b:Interaction.Behaviors>
                                </TextBox>

                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>

                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource CardHeaderMainTitleStyle}" Text="战斗设置" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="脱战清空为当前统计，非全程统计" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid>
                                <Grid.Resources>
                                    <Style BasedOn="{StaticResource TableTextBlock}" TargetType="TextBlock" />
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!--  临时占位  -->
                                <Grid Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock>脱战后清除当前统计</TextBlock>
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="2"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Style="{StaticResource AntTextBoxStyle}" />
                                    <TextBlock Grid.Column="2">秒</TextBlock>
                                </Grid>
                                <TextBlock Grid.Row="1" Grid.Column="0">
                                    换地图时清空全程统计
                                </TextBlock>
                                <ctrl:SwitchControl
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    OffContent="Off"
                                    OnContent="On" />
                                <TextBlock Grid.Row="2" Grid.Column="0">
                                    计数显示类型
                                </TextBlock>

                                <ComboBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="2"
                                    ItemsSource="{Binding AvailableNumberDisplayModes}"
                                    SelectedIndex="0"
                                    SelectedItem="{Binding AppConfig.DamageDisplayType}"
                                    Style="{StaticResource AntComboBoxStyle}" />
                                <TextBlock Grid.Row="3" Grid.Column="0">
                                    窗体透明度
                                </TextBlock>
                                <Slider
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource AntSliderStyle}" />
                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>
                </VirtualizingStackPanel>
            </ScrollViewer>

            <ctrl:Footer Grid.Row="3"
                         Height="50"
                         ConfirmClick="Footer_ConfirmClick"
                         CancelClick="Footer_CancelClick" />
        </Grid>
    </Border>
</Window>