<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:StarResonanceDpsAnalysis.WPF.Behaviors"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:loc="clr-namespace:StarResonanceDpsAnalysis.WPF.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="{lex:Loc Key={x:Static loc:LocalizationKeys.Window_Settings_Title}}"
    Width="460"
    Height="630"
    MinWidth="450"
    MinHeight="280"
    d:DataContext="{d:DesignInstance Type=viewModels:SettingsDesignTimeViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1000"
    lex:LocalizeDictionary.DesignCulture="en-US"
    lex:ResxLocalizationProvider.DefaultAssembly="StarResonanceDpsAnalysis.WPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    PreviewKeyDown="Window_PreviewKeyDown"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Window.Resources>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#阿里妈妈数黑体" />
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="CardHeaderGridStyle" TargetType="Grid">
            <Setter Property="Height" Value="{StaticResource CardHeaderHeight}" />
        </Style>

        <Style
            x:Key="TableTextBlock"
            BasedOn="{StaticResource {x:Type TextBlock}}"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>

        <Style BasedOn="{StaticResource TableTextBlock}" TargetType="TextBlock" />

        <Style x:Key="FieldLine" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>
        <DataTemplate x:Key="LocalizedEnumTextBlockDataTemplate">
            <TextBlock Text="{Binding Display}" />
        </DataTemplate>

    </Window.Resources>
    <Border Background="#EFEFEF" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ctrl:Header Title="{lex:Loc Key={x:Static loc:LocalizationKeys.Window_Settings_Title}}" Grid.Row="0" />

            <Grid Grid.Row="1">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="VerticalAlignment" Value="Top" />
                        <Setter Property="Height" Value="35" />
                        <Setter Property="Background" Value="{DynamicResource AccentSolidBrush}" />
                    </Style>
                </Grid.Style>
                <TextBlock Style="{StaticResource HeaderText}" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Heading}}" />
            </Grid>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <VirtualizingStackPanel IsVirtualizing="True">

                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource CardHeaderMainTitleStyle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Language_Title}}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Language_Description}}" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid Height="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Language_Title}}" />
                                <ComboBox
                                    Grid.Column="2"
                                    Margin="2"
                                    ItemTemplate="{StaticResource LocalizedEnumTextBlockDataTemplate}"
                                    ItemsSource="{Binding AvailableLanguages}"
                                    SelectedIndex="0"
                                    SelectedItem="{Binding SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource AntComboBoxStyle}" />
                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>

                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource CardHeaderMainTitleStyle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Basic_Title}}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Basic_Sub}}" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_NetworkAdapter_Label}}" />
                                <ComboBox
                                    Grid.Column="2"
                                    DisplayMemberPath="Description"
                                    ItemsSource="{Binding AvailableNetworkAdapters, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedIndex="0"
                                    SelectedItem="{Binding AppConfig.PreferredNetworkAdapter, Mode=TwoWay}"
                                    SelectedValuePath="Description"
                                    Style="{StaticResource AntComboBoxStyle}" />
                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>
                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource CardHeaderMainTitleStyle}" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Shortcut_Title}}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Shortcut_Sub}}" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid Height="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Shortcut_MouseThrough}}" />
                                <TextBox
                                    x:Name="MouseThroughTextBox"
                                    Grid.Column="2"
                                    Margin="2"
                                    IsReadOnly="True"
                                    Style="{StaticResource AntTextBoxStyle}"
                                    Text="{Binding AppConfig.MouseThroughShortcut, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource KeyToStringConverter}}"
                                    ToolTip="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Shortcut_MouseThrough_Tooltip}}">
                                    <b:Interaction.Behaviors>
                                        <behaviors:KeyDownCommandBehavior Command="{Binding HandleMouseThroughShortcutCommand}" />
                                    </b:Interaction.Behaviors>
                                </TextBox>
                                <TextBlock Grid.Column="4" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Shortcut_ClearData}}" />
                                <TextBox
                                    x:Name="ClearDataTextBox"
                                    Grid.Column="6"
                                    Margin="2"
                                    IsReadOnly="True"
                                    Style="{StaticResource AntTextBoxStyle}"
                                    Text="{Binding AppConfig.ClearDataShortcut, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource KeyToStringConverter}}"
                                    ToolTip="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Shortcut_ClearData_Tooltip}}">
                                    <b:Interaction.Behaviors>
                                        <behaviors:KeyDownCommandBehavior Command="{Binding HandleClearDataShortcutCommand}" />
                                    </b:Interaction.Behaviors>
                                </TextBox>

                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>

                    <ctrl:CardControl>
                        <ctrl:CardControl.Header>
                            <Grid Style="{StaticResource CardHeaderGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource CardHeaderMainTitleStyle}" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Combat_Title}}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource CardHeaderSubTitleStyle}"
                                    Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Section_Combat_Sub}}" />
                            </Grid>
                        </ctrl:CardControl.Header>
                        <ctrl:CardControl.Content>
                            <Grid>
                                <Grid.Resources>
                                    <Style BasedOn="{StaticResource TableTextBlock}" TargetType="TextBlock" />
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  临时占位  -->
                                <Grid Grid.Row="0" Style="{StaticResource FieldLine}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="135" />
                                        <ColumnDefinition Width="35" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Combat_ClearAfterBattle}}" />
                                    <TextBox
                                        Grid.Column="2"
                                        Margin="2"
                                        HorizontalContentAlignment="Right"
                                        VerticalContentAlignment="Center"
                                        Style="{StaticResource AntTextBoxStyle}"
                                        Text="{Binding AppConfig.CombatTimeClearDelay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Grid.Column="3" Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Common_Seconds}}" />
                                </Grid>

                                <Grid Grid.Row="1" Style="{StaticResource FieldLine}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="170" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Combat_ClearAfterTeleport}}" />
                                    <ctrl:SwitchControl
                                        Grid.Column="2"
                                        IsChecked="{Binding AppConfig.ClearLogAfterTeleport, Mode=TwoWay}"
                                        OffContent="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Switch_Off}}"
                                        OnContent="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Switch_On}}" />

                                </Grid>

                                <Grid Grid.Row="2" Style="{StaticResource FieldLine}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="170" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{lex:Loc Key=Settings_Display_NumberMode}" />
                                    <ComboBox
                                        Grid.Column="2"
                                        Margin="2"
                                        ItemTemplate="{StaticResource LocalizedEnumTextBlockDataTemplate}"
                                        ItemsSource="{Binding AvailableNumberDisplayModes}"
                                        SelectedIndex="0"
                                        SelectedItem="{Binding SelectedNumberDisplayMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource AntComboBoxStyle}" />
                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{lex:Loc Key={x:Static loc:LocalizationKeys.Settings_Display_Opacity}}" />
                                    <Slider
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        IsSnapToTickEnabled="True"
                                        Maximum="100"
                                        Minimum="0"
                                        Style="{StaticResource AntSliderStyle}"
                                        TickFrequency="1"
                                        Value="{Binding AppConfig.Opacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        Text="{Binding AppConfig.Opacity, Mode=OneWay}" />
                                </Grid>
                            </Grid>
                        </ctrl:CardControl.Content>
                    </ctrl:CardControl>
                </VirtualizingStackPanel>
            </ScrollViewer>

            <ctrl:Footer
                Grid.Row="3"
                Height="50"
                CancelClick="Footer_CancelClick"
                CancelCommand="{Binding CancelCommand}"
                ConfirmClick="Footer_ConfirmClick"
                ConfirmCommand="{Binding ConfirmCommand}" />
        </Grid>
    </Border>
</Window>
